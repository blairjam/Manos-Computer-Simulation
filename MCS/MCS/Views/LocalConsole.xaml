<UserControl x:Class="MCS.Views.LocalConsole"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCS.Views"
             xmlns:vm="clr-namespace:MCS.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <vm:LocalConsoleViewModel/>
    </UserControl.DataContext>
    <Grid>
        <TextBox Text="{Binding Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Background="#FF0F0F0F" Foreground="#FFF9F9F9" FontFamily="Consolas" VerticalScrollBarVisibility="Auto" IsReadOnlyCaretVisible="True"/>
    </Grid>
</UserControl>
